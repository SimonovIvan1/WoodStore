@model WoodStore.Models.Entity.SalesManager
@{
    ViewBag.Title = "Удаление менеджера";
}

<div>
    <dl class="dl-horizontal">
        <dt>Имя менеджера</dt>
        <dd>
            @Html.DisplayFor(model => model.FullName)
        </dd>

        <dt>Уникальный номер менеджера</dt>
        <dd>
            @Html.DisplayFor(model => model.Id)
        </dd>
    </dl>

    <div>
        <form asp-controller="SalesManager" asp-action="Delete" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Удалить" />
            </div>
        </form>
    </div>
</div>