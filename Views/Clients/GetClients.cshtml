@model IEnumerable<WoodStore.Models.Clients>
@{
    ViewData["Title"] = "Клиенты";

}
<!DOCTYPE html>

<html>
<head>
    <title>Магазин строительных материалов</title>
    <tr>
        <td>
            <a asp-action="GetOrders" asp-controller="Order">Заказы</a>
            <a asp-action="GetClients" asp-controller="Clients">Клиенты</a>
            <a asp-action="GetDeliverys" asp-controller="Delivery">Курьеры</a>
            <a asp-action="GetGoods" asp-controller="Goods">Товары</a>
            <a asp-action="GetAll" asp-controller="GoodsInOrder">Товары в заказе</a>
            <a asp-action="GetAll" asp-controller="SalesManager">Менеджеры</a>
            <a asp-action="GetPickers" asp-controller="Picker">Сборщики</a>
            <a asp-action="GetProviders" asp-controller="Provider">Поставщики</a>
        </td>
    </tr>
</head>
<body>
    <h3>Клиенты(Be update)</h3>
    <table class="table-condensed">
        <tr>
            <td>Уникальный номер клиента</td>
            <td>ФИО</td>
            <td>Номер телефона клиента</td>
        </tr>
        @foreach (var client in Model)
        {
    <tr>
        <td>@client.Id</td>
        <td>@client.Name</td>
        <td>@client.PhoneNumber</td>
        <td>
            <a asp-action="Details" asp-controller="Clients" asp-route-id="@client.Id">Подробнее</a> |
            <a asp-action="Update" asp-controller="Clients" asp-route-id="@client.Id">Изменить</a> |
            <a asp-action="Delete" asp-controller="Clients" asp-route-id="@client.Id">Удалить</a>
        </td>
    </tr>
        }
    </table>
</body>
</html>