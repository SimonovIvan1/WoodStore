@model WoodStore.Models.Clients
@{
    ViewBag.Title = "Удаление клиента из базы";
}

<div>
    <dl class="dl-horizontal">
        <dt>Имя клиента</dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>Номер клиентав</dt>
        <dd>
            @Html.DisplayFor(model => model.Id)
        </dd>
    </dl>

    <div>
        <form asp-controller="Clients" asp-action="Delete" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Удалить" />
            </div>
        </form>
    </div>
</div>