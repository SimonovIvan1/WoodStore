@model WoodStore.Models.Entity.GoodsInOrder
@{
    ViewBag.Title = "Удаление товара из заказа";
}

<div>
    <dl class="dl-horizontal">
        <dt>Номер товара</dt>
        <dd>
            @Html.DisplayFor(model => model.GoodsId)
        </dd>

        <dt>Количество товара в заказе</dt>
        <dd>
            @Html.DisplayFor(model => model.GoodCount)
        </dd>
    </dl>

    <div>
        <form asp-controller="GoodsInOrder" asp-action="Delete" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Удалить" />
            </div>
        </form>
    </div>
</div>