@model IEnumerable<WoodStore.Models.Entity.GoodsInOrder>
@{
    ViewData["Title"] = "Товары в заказе";

}
<!DOCTYPE html>

<html>
<head>
    <title>Магазин строительных материалов</title>
    <tr>
        <td>
            <a asp-action="GetOrders" asp-controller="Order">Заказы</a>
            <a asp-action="GetClients" asp-controller="Clients">Клиенты</a>
            <a asp-action="GetDeliverys" asp-controller="Delivery">Курьеры</a>
            <a asp-action="GetGoods" asp-controller="Goods">Товары</a>
            <a asp-action="GetAll" asp-controller="GoodsInOrder">Товары в заказе</a>
            <a asp-action="GetAll" asp-controller="SalesManager">Менеджеры</a>
            <a asp-action="GetPickers" asp-controller="Picker">Сборщики</a>
            <a asp-action="GetProviders" asp-controller="Provider">Поставщики</a>
        </td>
    </tr>
</head>
<body>
    <h3>Товары в заказе(Be update)</h3>
    <table class="table-condensed">
        <tr>
            <td>Номер заказа</td>
            <td>Номер товара</td>
            <td>Количество товара в заказе</td>
        </tr>
        @foreach (var goodsInOrder in Model)
        {
            <tr>
                <td>@goodsInOrder.OrderId</td>
                <td>@goodsInOrder.GoodsId</td>
                <td>@goodsInOrder.GoodCount</td>
                <td>
                    <a asp-action="Update" asp-controller="GoodsInOrder" asp-route-id="@goodsInOrder.Id">Изменить</a> |
                    <a asp-action="Delete" asp-controller="GoodsInOrder" asp-route-id="@goodsInOrder.Id">Удалить</a>
                </td>
            </tr>
        }
    </table>
</body>
</html>