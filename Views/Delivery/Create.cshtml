@{ Layout = null; }

<!DOCTYPE html>
<html>
<head>
    <title>Добро пожаловать на работу! Заполните свои контактные данные.</title>
</head>
<body>
    <div>
        <h3>Форма регистрации курьера</h3>
        <p>Перед началом работы заполните:</p>
        <form method="post">
            <input type="hidden" value="@ViewBag.DeliveryId" name="DeliveryId" />
            <table>
                <tr>
                    <td>Введите ФИО:</td>
                    <td><input type="text" name="Name" /> </td>
                </tr>
                <tr>
                    <td>Номер телефона:</td>
                    <td><input type="text" name="Telephone" /></td>
                </tr>
                <tr>
                    <td>Гос номер машины:</td>
                    <td><input type="text" name="CarNumber" /></td>
                </tr>

                <tr><td><input type="submit" value="Отправить" /> </td><td></td></tr>
            </table>
        </form>
    </div>
</body>
</html>