@model WoodStore.Models.Entity.Picker
@{
    ViewBag.Title = "Удаление сборщика";
}

<div>
    <dl class="dl-horizontal">
        <dt>Имя сборщика</dt>
        <dd>
            @Html.DisplayFor(model => model.FullName)
        </dd>

        <dt>Уникальный номер сборщика</dt>
        <dd>
            @Html.DisplayFor(model => model.Id)
        </dd>
    </dl>

    <div>
        <form asp-controller="Picker" asp-action="Delete" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Удалить" />
            </div>
        </form>
    </div>
</div>